@model ProductListVM

<h1>@Model.SelectedCategoryName</h1>
<hr />
<div class="row ">
@foreach (var item in Model.Products)
{
    <div class="card my-2 mx-2 " style="width: 15rem;">
        <img class="card-img-top" src="~/images/@item.ImageUrl" alt="@item.Title">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <h6 class="card-subtitle">@item.Category.Name</h6>
            <p class="card-text">@item.Description</p>
        </div>
        <div class="card-footer">
            <a asp-controller="Product" asp-action="Details"
                asp-route-id="@item.ProductId" class="btn btn-primary" >
                Detail
            </a>
            <a asp-controller="ShoppingCart"
                asp-action="AddToShoppingCart"
                asp-route-productId=@item.ProductId 
                class="btn btn-primary">Add to cart</a>
        </div>
    </div>
}
</div>
